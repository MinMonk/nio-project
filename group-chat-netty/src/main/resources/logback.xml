<configuration>

    <!-- 控制台应用器 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%logger] - (%F:%L\): %msg%n</pattern>
        </encoder>
    </appender>


    <!-- 日志级别 -->
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>